@model Biblioteca.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-md-center">
    <div class="jumbotron col-6 text-center">
        <h1 style="font-family: 'Arial', sans-serif; color: #007bff; font-size: 35px;">Bem-vindo ao sistema Biblioteca</h1>
        <form asp-action="Login" method="POST">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Entrar</button>
        </form>
        <p class="text-danger">@ViewData["Erro"]</p>
    </div>
</div>
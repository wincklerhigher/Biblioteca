@model CadEmprestimoViewModel

<link rel="stylesheet" href="~/css/listagem.css" />

<div class="row justify-content-md-center">
    <div class="jumbotron col-6 text-center">
        <h1 style="font-family: 'Arial', sans-serif; color: #007bff; font-size: 24px;">Bem vindo ao sistema Biblioteca</h1>
        <form asp-controller="Emprestimo" asp-action="Listagem" method="POST" class="form-inline">
            <div class="form-group mb-2">
                <select name="TipoFiltro" class="form-control">
                    <option value="Usuario">Usuário</option>
                    <option value="Livro">Livro</option>
                </select>
            </div>
            <div class="form-group mb-2 mx-sm-3">
                <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Usuario</th>
                    <th>Data Empréstimo</th>
                    <th>Data Devolução</th>
                    <th>Livro</th>
                    <th>Autor</th>
                    <th>Ações</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Emprestimos)
                {
                    <tr class="@(e.Estado == "Atrasado" && e.DataDevolucao.HasValue && e.DataDevolucao.Value < DateTime.Today ? "atrasado" : "")">
                        <td>@e.Id</td>
                        <td>@e.NomeUsuario</td>
                        <td>@e.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                        <td>@(e.DataDevolucao.HasValue ? e.DataDevolucao.Value.ToString("dd/MM/yyyy") : "")</td>
                        <td>@(e.Livro != null ? e.Livro.Titulo : "")</td>
                        <td>@(e.Livro != null ? e.Livro.Autor : "")</td>
                        <td>
                            <div class="btn-acoes">
                                <a asp-controller="Emprestimo" asp-action="Edicao" asp-route-id="@e.Id" class="btn btn-info btn-sm">Editar</a>
                            </div>
                            <div class="btn-acoes">
                                <a asp-controller="Emprestimo" asp-action="Apagar" asp-route-id="@e.Id" class="btn btn-danger btn-sm">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>        
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-controller="Emprestimo" asp-action="Listagem" asp-route-page="@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-controller="Emprestimo" asp-action="Listagem" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-controller="Emprestimo" asp-action="Listagem" asp-route-page="@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>